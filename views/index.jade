extends layout

block content
  .container
  .row.clearfix
    .col-md-8.column
      form.form-horizontal.form-chat(role="form", action="#")
        .form-group
          .col-md-10.column
            input.form-control.chat(placeholder="Enter a message")
          .col-md-2.column
            button.btn.btn-default(type="submit")
              = "Send"
      ul.chatlist
    .col-md-4.column
      form.form-horizontal.form-room(role="form", action="#")
        .form-group
          .col-md-10.column
            input.form-control.room(placeholder="Join a new room")
          .col-md-2.column
            button.btn.btn-default(type="submit")
              = "Join"
      ul.roomlist
  script(src='/javascripts/main.js')
